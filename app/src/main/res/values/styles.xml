<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme.LaunchScreen.Base is necessary because on higher API levels it will be overridden to paint the status or navigation bar -->
    <style name="Theme.LaunchScreen.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorLaunchScreenBackground</item>
        <item name="android:windowLightStatusBar">@bool/isLightMode</item>
    </style>

    <style name="Theme.LaunchScreen" parent="Theme.LaunchScreen.Base">
        <item name="android:background">@drawable/launch_screen_background</item>
        <item name="alertDialogTheme">@style/Theme.HomeAssistant.Dialog.Alert.Launch</item>
    </style>

    <style name="Theme.Hivebit" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/hivebit_primary</item>
        <item name="colorPrimaryDark">@color/hivebit_accent</item>
        <item name="colorAccent">@color/hivebit_primary</item>
        <item name="colorSecondary">@color/hivebit_primary</item>
        <item name="colorSecondaryVariant">@color/hivebit_primary_variant</item>
        <item name="colorButtonNormal">@color/hivebit_primary</item>
        <item name="android:colorBackground">@color/hivebit_dark_background</item>
        <item name="android:navigationBarColor">@color/hivebit_accent</item>
        <item name="android:statusBarColor">@color/hivebit_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/hivebit_dark_background</item>
        <item name="colorSurface">@color/hivebit_dark_surface</item>
        <item name="colorOnBackground">@color/hivebit_dark_text_primary</item>
        <item name="colorOnSurface">@color/hivebit_dark_text_primary</item>
        <item name="alertDialogTheme">@style/Theme.Hivebit.Dialog.Alert</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Hivebit.BottomSheetDialog</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="Theme.HomeAssistant" parent="Theme.Hivebit" />

    <style name="Theme.Hivebit.Config" parent="Theme.Hivebit">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">@bool/isLightMode</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="Theme.HomeAssistant.Config" parent="Theme.Hivebit.Config" />

    <style name="Theme.Hivebit.Assist" parent="Theme.Hivebit" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="Theme.HomeAssistant.Assist" parent="Theme.Hivebit.Assist" />

    <style name="TextAppearance.Hivebit.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorHeadline1</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="TextAppearance.HomeAssistant.Headline" parent="TextAppearance.Hivebit.Headline" />

    <style name="TextAppearance.HomeAssistant.Title" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorHeadline2</item>
    </style>

    <style name="TextAppearance.HomeAssistant.Medium" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.HomeAssistant.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Widget.HomeAssistant.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.HomeAssistant.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/colorActionBarPopupBackground</item>
    </style>

    <style name="ThemeOverlay.HomeAssistant.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/colorActionBar</item>
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Pure White on Hivebit Black -->
        <item name="colorControlNormal">#FFFFFF</item> <!-- Pure White icons -->
        <item name="popupTheme">@style/Theme.HomeAssistant.PopupTheme</item>
    </style>

    <style name="ThemeOverlay.Hivebit.BottomSheetDialog" parent="ThemeOverlay.Hivebit.BottomSheetDialog.Base"/>
    
    <!-- Backwards compatibility alias -->
    <style name="ThemeOverlay.HomeAssistant.BottomSheetDialog" parent="ThemeOverlay.Hivebit.BottomSheetDialog" />

    <style name="ThemeOverlay.Hivebit.BottomSheetDialog.Base" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="ThemeOverlay.HomeAssistant.BottomSheetDialog.Base" parent="ThemeOverlay.Hivebit.BottomSheetDialog.Base" />

    <style name="ThemeOverlay.HomeAssistant.ConfigActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
        <item name="colorControlNormal">@color/colorOnBackground</item>
        <item name="popupTheme">@style/Theme.HomeAssistant.PopupTheme</item>
    </style>

    <style name="Theme.HomeAssistant.Dialog.Alert.Launch" parent="Theme.HomeAssistant.Dialog.Alert">
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.Hivebit.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="android:textColorPrimary">@color/colorDialogMessage</item>
        <item name="colorAccent">@color/hivebit_primary</item>
        <item name="textColorAlertDialogListItem">@color/colorDialogMessage</item>
        <item name="colorControlNormal">@color/colorDialogMessage</item>
    </style>
    
    <!-- Backwards compatibility alias -->
    <style name="Theme.HomeAssistant.Dialog.Alert" parent="Theme.Hivebit.Dialog.Alert" />

    <style name="Theme.HomeAssistant.Widget">
        <item name="colorWidgetPrimary">@color/colorWidgetButtonLabel</item>
        <item name="colorWidgetButton">@color/colorIcon</item>
        <item name="colorWidgetBackground">@color/colorWidgetButtonBackground</item>
        <item name="colorWidgetOnBackground">@color/colorWidgetButtonLabel</item>
        <item name="dimenWidgetCornerRadius">@dimen/widget_corner_radius</item>
    </style>

    <style name="Authentication_Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColor">@color/colorDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="windowMinWidthMajor">300dp</item>
        <item name="windowMinWidthMinor">0dp</item>
        <item name="android:textColorPrimary">@color/colorDialogMessage</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
